@using Microsoft.AspNetCore.Components.Web
@using WebDevelopment_Assignment2.Models
@using WebDevelopment_Assignment2.App_Data
@inject IShoppingRepo sqlShoppingRepo
@inject Cart cart
@inject IUserRepo Userrepo


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card-columns">
                @foreach (var product in sqlShoppingRepo.getAllProducts())
                {
                    <div class="card">
                        <div class="card-img img-fluid" style="background-image: url('https://user-images.githubusercontent.com/41929050/61567048-13938600-aa33-11e9-9cfd-712191013192.jpeg')">

                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-12">
                                    @product.ProductName
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <h3>R @product.Price</h3>
                                </div>
                                <div class="col-6">
                                    <button @onclick="(e => SelectProduct(product.ProductID))"
                                            data-toggle="modal" data-target="#productModal" class="btn btn-sm btn-warning">
                                        Add To Cart
                                    </button>
                                    
                                        
                                </div>
                            </div>
                        </div>
                    </div>
                                        }
            </div>
        </div>
    </div>
</div>



@if (selectedProduct != null)
{
    <div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productTitle">@selectedProduct.ProductName</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-img" style="background-image: url('https://user-images.githubusercontent.com/41929050/61567048-13938600-aa33-11e9-9cfd-712191013192.jpeg')">

                        </div>
                        <div class="card-body">
                            <p class="card-text">R @selectedProduct.Price</p>
                           

                            <button @onclick="(e => AddToCart(selectedProduct.ProductID))" class="btn btn-warning" data-dismiss="modal">Add to Cart</button>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
}

@code {
    Product selectedProduct;
    CartItem cartItem;

    void SelectProduct(int ProductID)
    {
        selectedProduct = sqlShoppingRepo.getProductById(ProductID);
    }
    void AddToCart(int ProductID)
    {
        cartItem = new CartItem();
        cartItem.ProductID = ProductID;
        cartItem.Qty = 1;
        cart.AddToCart(cartItem);
    }
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />


