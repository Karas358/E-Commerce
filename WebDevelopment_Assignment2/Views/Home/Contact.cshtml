@{
    ViewData["Title"] = "Contact Page";
}

<div class="row">
    <div class="col-lg-12">
        <div class="justify-content-lg-start">
            <h1 class="display-4">Get in touch</h1>
            <p>Have an queries?</p>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <input class="form-control w-100" placeholder="Name Surname" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <input class="form-control w-100" placeholder="Email" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <textarea class="form-control w-100" placeholder="Message" style="resize:none"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 align-content-end">
                        <button class="btn btn-warning w-25">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>
