@model WebDevelopment_Assignment2.Models.Order

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h1>Processed Successfully</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <h5>Date</h5>
    </div>
    <div class="col-6">
        @Model.OrderTimeStamp
    </div>
</div>
<hr />
<div class="row">
    <div class="col-6">
        <h5>Order Number</h5>
    </div>
    <div class="col-6">
        @Model.OrderID
    </div>
</div>
<hr />
<div class="row">
    <div class="col-6">
        <h5>Total Amount</h5>
    </div>
    <div class="col-6">
        R @Model.TotalPrice.ToString().Substring(0, Model.TotalPrice.ToString().Length - 2)
    </div>
</div>
<hr />
<div class="row">
    <div class="col-6">
        <a class="btn btn-warning" asp-controller="Home" asp-action="Account">Done</a>
    </div>
    <div class="col-6">
        
    </div>
</div>
@{
}
